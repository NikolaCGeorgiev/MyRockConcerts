@model MyRockConcerts.Web.ViewModels.InputModels.Venues.VenueEditInputModel
@{
    ViewData["Title"] = "Edit venue - " + Model.Name;
}

<div class="text-center">
    <h1>@this.ViewData["Title"]</h1>
</div>

@if (this.TempData["Error"] != null)
{
    @await Component.InvokeAsync("ErrorAlert", new { message = this.TempData["Error"] })
}

<form enctype="multipart/form-data" method="post" asp-action="Edit">
    <div class="form-group row">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Name" value=@Model.Name>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <img src="@Model.ImgUrl" height="400" class="d-block w-100" alt="...">
        <input asp-for="@Model.ImgUrl" type="hidden" class="form-control" value=@Model.ImgUrl>
    </div>

    <div class="form-group row">
        <label asp-for="Photo" class="upload-btn">
            <i class="fas fa-cloud-upload-alt"></i> Upload New Photo
        </label>
        <input asp-for="Photo" type="file" class="form-control-file">
    </div>

    <div class="form-group row">
        <label asp-for="Country"></label>
        <input asp-for="Country" type="text" class="form-control" placeholder="Country" value=@Model.Country>
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label asp-for="City"></label>
        <input asp-for="City" type="text" class="form-control" placeholder="City" value=@Model.City>
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label asp-for="Address"></label>
        <input asp-for="Address" type="text" class="form-control" placeholder="Address" value=@Model.Address>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" type="number" class="form-control" placeholder="Capacity" value=@Model.Capacity>
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <hr />
    <div class="text-center">
        <input type="submit" class="btn btn-primary" />
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


